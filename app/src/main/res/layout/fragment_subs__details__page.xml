<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_background"
    tools:context=".Fragments.Subs_Details_Page">
<ScrollView
    android:overScrollMode="never"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="25dp"
            android:gravity="left"
            android:text="Premium club Benefits"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/challenge_friends_by_creating_remote_events_and_build_your_own_fit_community"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
            <ImageView
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/fitnessmodel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/logo" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="@string/set_goals_an_earn_coins_on_achieving_them"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/get_notifications_and_remainders_to_achieve_targets"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/abc" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_73sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/temple" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/enter_global_leaderboard_and_earn_extra_coins_on_when_you_level_up_every_time"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/_50sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Go Premium"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="@dimen/_10sdp" />
    </LinearLayout>
</ScrollView>


</FrameLayout>